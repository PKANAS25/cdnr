			<!-- begin row -->
            <div class="col-md-12">
                    <!-- begin panel -->
                    <div class="panel panel-inverse" data-sortable-id="table-basic-1">
                        <div class="panel-heading hidden-print">
                            
                            <h4 class="panel-title">List</h4>
                        </div>
                        
                        <div class="panel-body">

                        <form class="form-inline hidden-print" name="eForm" id="eForm"  method="post" autocomplete="OFF">
                         <?php foreach($errors->all() as $error): ?>
                                    <p class="alert alert-danger"><?php echo e($error); ?></p>
                                <?php endforeach; ?>
                             <input type="hidden" name="_token" value="<?php echo csrf_token(); ?>"> 
                                 <div class="form-group m-r-10">
                                    <label class="control-label col-md-4 col-sm-4" for="name">Industry Name:</label>
                                    <div class="col-md-6 col-sm-6">
                                        <input class="form-control" type="text" id="name"   name="name" data-fv-notempty="true"   value="<?php echo e(old('name')); ?>" />
                                    </div>
                                </div>
                                
                                 
                                <button type="submit" class="btn btn-primary m-r-5">Add new</button> 
                            </form>  
